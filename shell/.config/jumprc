# File for aliases that take you places
# The directories section is read by genlfjmp script

# Files
alias jmp='$EDITOR ~/.config/jumprc'
alias als='$EDITOR ~/.config/aliasrc'
alias mml='$EDITOR ~/.config/mimeapps.list'
alias pro='$EDITOR "${XDG_CONFIG_HOME:-$HOME/.config}/profile"'
alias xrc='$EDITOR "${XDG_CONFIG_HOME:-$HOME/.config}/X11/xinitrc"'
alias swm='$EDITOR "${XDG_CONFIG_HOME:-$HOME/.config}/spectrwm/spectrwm.conf"'
alias xpr='$EDITOR "${XDG_CONFIG_HOME:-$HOME/.config}/X11/xprofile"'
alias rit='(cd ~/.config/river && $EDITOR ~/.config/river/init)'
alias zrc='$EDITOR "${XDG_CONFIG_HOME:-$HOME/.config}/zsh/.zshrc"'
alias vrc='(cd ~/.config/nvim && $EDITOR ~/.config/nvim/init.lua)'
alias api='$EDITOR ~/dotfiles/scripts/.scripts/arch_postinstall.sh'
alias sxh='$EDITOR "${XDG_CONFIG_HOME:-$HOME/.config}/sxhkd/sxhkdrc"'
alias xres='$EDITOR "${XDG_CONFIG_HOME:-$HOME/.config}/X11/Xresources"'
alias rss='$EDITOR ~/.config/newsraft/feeds'
alias art='$EDITOR ~/Music/Playlists/artists.yaml'
alias bms='$EDITOR ~/.config/surf/bookmarks'
alias snip='$EDITOR ~/.config/snippetrc'
alias todo='$EDITOR ~/Sync/todo'
alias le='note -e "ledger/entries/$(date +%Y.ldg)"'

# Directories
alias cdap='cd ~/.local/share/applications && ls'
alias cdc='cd ~/.config && ls'
alias cddap='cd ~/dotfiles/mime/.local/share/applications && ls'
alias cddlb='cd ~/dotfiles/scripts/.local/bin && ls'
alias cddmu='cd ~/Downloads/Music && ls'
alias cddsc='cd ~/dotfiles/scripts/.scripts && ls'
alias cdwm='cd ~/Software/dwm && ls'
alias cdwmb='cd ~/Software/dwmblocks && ls'
alias cdlb='cd ~/.local/bin && ls'
alias cdls='cd ~/.local/share && ls'
alias cdlt='cd ~/.local/state && ls'
alias cdmn='cd /mnt && ls'
alias cdmt="cd /run/media/$(whoami) && ls"
alias cdmu='cd ~/Music && ls'
alias cdpl='cd ~/Music/Playlists && ls'
alias cdoc='cd ~/Documents && ls'
alias cdsy='cd ~/Sync && ls'
alias cdot='cd ~/dotfiles && ls'
alias cdow='cd ~/Downloads && ls'
alias cdpa='cd ~/.local/share/pass && ls'
alias cdno='cd ~/.local/share/notes && ls'
alias cdpi='cd ~/Pictures && ls'
alias cdput='cd ~/Documents/put/sem8 && ls'
alias cdrap='cd /usr/share/applications && ls'
alias cdro='cd ~/Dropbox && ls'
alias cdsc='cd ~/.scripts && ls'
alias cdso='cd ~/Software && ls'
alias cdst='cd ~/Software/st && ls'
alias cdsu='cd ~/Software/surf && ls'
alias cdtr='cd ~/.local/share/Trash/files && ls'
alias cdulb='cd /usr/local/bin && ls'
alias cdvi='cd ~/Videos && ls'
alias cdwall='cd ~/.local/share/wallpapers && ls'
alias cdru='cd ~/Software/randoutils && ls'
alias cdsp='cd ~/Software/libstaple && ls'
alias cdnf='cd ~/Software/neatroff/devutf/ && ls'
alias cdri='cd ~/.config/river/ && ls'
