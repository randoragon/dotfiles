# Start graphical server on tty1 if not already running, otherwise start tmux
if [ "$(tty)" = "/dev/tty1" ] && ! pgrep -x Xorg >/dev/null; then
    exec /usr/bin/startx "${XDG_CONFIG_HOME:-$HOME/.config}/X11/xinitrc"
elif command -v tmux; then
    tmux
fi
